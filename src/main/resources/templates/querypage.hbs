    $("#answer4").click(function () { //게임
        $("#queryimg").attr("src","https://t1.daumcdn.net/cfile/tistory/990BEA355C4DC19322");
    });

    function queryStudent() {
        console.log("질문 학생");
        $("#answer1region").attr("class","col-lg-6");
        $("#answer2region").attr("class","col-lg-6");
        $("#answer1").html('초중고등학생');
        $("#answer2").html('대학생');
        $("#answer1").click(function () {//초중고등학생
            $("#queryimg").attr("src","https://t1.daumcdn.net/cfile/tistory/990BEA355C4DC19322");
            memorysize = "2,4";
            address = final(address, brand, memorysize, sizeinch, pricerange, weight, gpukind);
            console.log(address);
        });
        $("#answer2").click(function () {//대학생
            $("#queryimg").attr("src","https://t1.daumcdn.net/cfile/tistory/990BEA355C4DC19322");
        });
        $("#answer3").hide();
        $("#answer4").hide();
    }

    function final(address, brand, cpukind, memorysize, sizeinch, pricerange, weight, gpukind){
        if(brand != null)
            address = address + "brand=" + brand;
        if(cpukind != null)
            address = address + "cpukind=" + cpukind;
        if(memorysize != null)
            address = address + "memorysize=" + memorysize;
        if(sizeinch != null)
            address = address + "sizeinch=" + sizeinch;
        if(pricerange != null)
            address = address + "pricerange=" + pricerange;
        if(weight != null)
            address = address + "weight=" + weight;
        if(gpukind != null)
            address = address + "gpukind" + gpukind;
        return address;
    }

</script>

