<script type="text/javascript">
    console.log("질문1");
    var address = "?";
    var brand = null;
    var cpukind = null;
    var memorysize = null;
    var sizeinch = null;
    var pricerange = null;
    var weight = null;
    var gpukind = null;

    $("#answer1").click(function () { //학업
