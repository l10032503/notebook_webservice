    <script language="javascript">
        var selection = "전체";
        $(function(){
            $(".dropdown-menu a").click(function(){
                $(".ddbtn:first-child").text($(this).text());
                $(".ddbtn:first-child").val($(this).text());
                selection = $(".ddbtn:first-child").val();
            });
        });
        function buttonClicked() {
            var keyword = document.getElementById("keywordtext").value;
            if (!keyword) {
                alert("검색어를 입력해주세요.");
            }
            else {
                if(selection=="모델명")
                {window.location.href = "http://comalmot.com/view?searchmodel=" + keyword;}
                else if(selection=="브랜드명")
                {window.location.href = "http://comalmot.com/view?searchbrand=" + keyword;}
                else
                {window.location.href = "http://comalmot.com/view?searchall=" + keyword;}
            }
        }
        function urlcontrol(a){
            if(a.indexOf("?page=")!=-1) { // view?page=1
                var strarray = a.split('page=');
                a = strarray[0] + "page=";
            }
            else if(a.indexOf("&page=")!=-1){ //검색시 페이지
                var strarray = a.split('page=');
                a = strarray[0] + "page=";
            }
            else{
                var b = a.substr(a.length - 5);
                if(b.indexOf("view")!= -1)
                    a+="?page=";
                else
                    a+="&page=";
            }
            return a;
        }
        function prepage(number) {
            var url = window.location.href;
            url = urlcontrol(url);
            url+=number;
            document.location.href = url;
        }
        function nextpage(number) {
            var url = window.location.href;
            url = urlcontrol(url);
            var nextnumber = number +2;
            url+=nextnumber;
            document.location.href = url;
        }
    </script>

